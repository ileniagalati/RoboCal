# this is the top-most .editorconfig
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Src/**.{h,cpp,mm}]
indent_style = space
indent_size = 2

[Config/**.{con,ros2,rsi2,cfg}]
indent_style = space
indent_size = 2

[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
tab_width = 2
